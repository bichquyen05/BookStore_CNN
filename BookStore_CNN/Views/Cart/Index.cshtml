
@model IEnumerable<BookStore_CNN.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "";
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ogani | Template</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="./TemplateCuss/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="./TemplateCuss/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="./TemplateCuss/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="./TemplateCuss/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="./TemplateCuss/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="./TemplateCuss/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="./TemplateCuss/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="./TemplateCuss/css/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__Logo">
            <a href="~/"><img src="~/TemplateCuss/img/Logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
            </ul>
            <div class="header__cart__price">item: <span>$150.00</span></div>
        </div>
        <div class="humberger__menu__widget">
            <div class="header__top__right__auth">
                <a href="#"><i class="fa fa-user"></i> Đăng Nhập</a>
            </div>
        </div>
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li><a href="~/">Tranh chủ</a></li>
                <li><a href="~/shop-grid.html">Cửa hàng</a></li>
                <li><a href="~/Home/About">Giới thiệu</a></li>
                <li class="active"><a href="~/Home/Contact">Liên hệ</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> carat@colorlib.com</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="header__top__left">
                            <ul>
                                <li><i class="fa fa-envelope"></i> carat@colorlib.com</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="header__top__right">
                            <div class="header__top__right__social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                                <a href="#"><i class="fa fa-pinterest-p"></i></a>
                            </div>
                            <div class="header__top__right__auth">
                                <a href="#"><i class="fa fa-user"></i> Đăng nhập</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__Logo">
                        <a href="~/"><img src="~/TemplateCuss/img/Logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li><a href="~/">Trang chủ</a></li>
                            <li class="active"><a href="~/Home/Shop">Cửa hàng</a></li>
                            <li><a href="~/Home/About">Giới thiệu</a></li>
                            <li><a href="~/Home/Contact">Liên hệ</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li><a href="#"><i class="fa fa-heart"></i> <span>1</span></a></li>
                            <li><a href="#"><i class="fa fa-shopping-bag"></i> <span>3</span></a></li>
                        </ul>
                        <div class="header__cart__price">item: <span>$150.00</span></div>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Danh mục sách</span>
                        </div>
                        <ul>
                            @await Component.InvokeAsync("CategoriesMenu")
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form asp-controller="Products" asp-action="Search">
                                <input type="text" name="keyword" placeholder="Nhập tên sách">
                                <button type="submit" class="site-btn">TÌM KIẾM</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>0809900900</h5>
                                <span>Hỗ trợ 24/7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->    
    <!-- Breadcrumb Section End -->
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/TemplateCuss/img/breadcrumb1.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>GIỎ HÀNG</h2>
                        <div class="breadcrumb__option">
                            <a href="~/">Tranh chủ</a>
                            <span>Giỏ hàng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Shoping Cart Section Begin -->
    <section class="shoping-cart spad">
        <div class="container"> 
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="shoping__cart__table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="shoping__product">Tên Sách</th>
                                            <th>Giá</th>
                                            <th>Số lượng</th>
                                            <th>Thành tiền</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>                                           
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="shoping__cart__item">
                                                    <img src="@Url.Content("../BookImage/" + item.hinhAnh)" alt="" style="width:30%; height:50%">
                                                    <h5>@item.tenSach</h5>
                                                </td>                                    
                                                <td class="shoping__cart__price">
                                                    @String.Format("{0:0,0}", item.giaBan)đ
                                                </td>
                                                <form asp-controller="Cart" asp-action="UpdateCartItem" asp-route-itemid="@item.idSach">
                                                    <td class="shoping__cart__quantity">
                                                        <div class="quantity">
                                                            <div class="pro-qty">
                                                                <input type="number" name="quantity" value="@item.iSoLuong">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td class="shoping__cart__total">
                                                            @String.Format("{0:0,0}", item.dThanhtien)đ
                                                    </td>
                                                    <td class="shoping__cart__item__load">
                                                        <button class="primary-btn cart-btn cart-btn-right">
                                                            Cập nhật
                                                        </button>
                                                    </td>
                                                </form>
                                                <form asp-controller="Cart" asp-action="RemoveCartItem" asp-route-itemid="@item.idSach">
                                                    <td class="shoping__cart__item__close">
                                                        <button class="primary-btn cart-btn cart-btn-right">Xóa bỏ</button>
                                                    </td>
                                                </form>                                                                                                                                             
                                            </tr>  
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="shoping__cart__btns">
                                <a href="~/Home/Shop" class="primary-btn cart-btn">TIẾP TỤC MUA SẮM</a>
                                <button class="primary-btn cart-btn cart-btn-right">
                                    <span class="icon_loading"></span>
                                    Xóa giỏ hàng
                                </button>
                            </div>
                        </div>
                    </div>         
                <div class="col-lg-12">
                    <div class="shoping__checkout">
                        <h5>Tổng tiền</h5>
                        <ul>
                            <li>Giảm Giá <span>@String.Format("{0:0,0}", @ViewBag.Discount)₫</span></li>
                            <li>Tổng<span>@String.Format("{0:0,0}", @ViewBag.Total)₫</span></li>
                        </ul>
                        <a href="#" class="primary-btn">TIẾN HÀNH ĐẶT HÀNG</a>
                    </div>
                </div>                    
            }
        </div>
    </section>
    <!-- Shoping Cart Section End -->
    <!-- Footer Section Begin -->
    @await Html.PartialAsync("_FrontEndFooter")
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="./TemplateCuss/js/jquery-3.3.1.min.js"></script>
    <script src="./TemplateCuss/js/bootstrap.min.js"></script>
    <script src="./TemplateCuss/js/jquery.nice-select.min.js"></script>
    <script src="./TemplateCuss/js/jquery-ui.min.js"></script>
    <script src="./TemplateCuss/js/jquery.slicknav.js"></script>
    <script src="./TemplateCuss/js/mixitup.min.js"></script>
    <script src="./TemplateCuss/js/owl.carousel.min.js"></script>
    <script src="./TemplateCuss/js/main.js"></script>


</body>

</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".updatecartitem").click(function (event) {
                event.preventDefault();
                var productid = $(this).attr("data-productid");
                var quantity = $("#quantity-" + productid).val();
                $.ajax({
                    type: "POST",
                    url: "@Url.RouteUrl("updatecart")",
                    data: {
                        productid: productid,
                        quantity: quantity
                    },
                    success: function (result) {
                        window.location.href = "@Url.RouteUrl("cart")";
                    }
                });
            });
        });
    </script>
}