
@{
    Layout = null;
}

@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Product>

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Shop</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/TemplateCuss/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/TemplateCuss/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/TemplateCuss/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/TemplateCuss/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="~/TemplateCuss/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/TemplateCuss/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/TemplateCuss/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/TemplateCuss/css/style.css" type="text/css">
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__Logo">
            <a href="~/"><img src="~/TemplateCuss/img/Logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="#"><i class="fa fa-heart"></i> </a></li>
                <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-bag"></i> </a></li>
            </ul>
            @* <div class="header__cart__price">Tổng: <span>@ViewBag.Total ₫</span></div> *@
        </div>
        @await Html.PartialAsync("_HeaderMobile")
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li><a href="~/">Tranh chủ</a></li>
                <li class="active"><a href="~/Home/Shop">Cửa hàng</a></li>
                <li><a href="~/Home/About">Giới thiệu</a></li>
                <li><a href="~/Home/Contact">Liên hệ</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> carat@colorlib.com</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
        @await Html.PartialAsync("_Header")
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__Logo">
                        <a href="~/"><img src="~/TemplateCuss/img/Logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li><a href="~/">Trang chủ</a></li>
                            <li class="active"><a href="~/Home/Shop">Cửa hàng</a></li>
                            <li><a href="~/Home/About">Giới thiệu</a></li>
                            <li><a href="~/Home/Contact">Liên hệ</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li><a href="#"><i class="fa fa-heart"></i> </a></li>
                            <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-bag"></i> </a></li>
                        </ul>
                        @* <div class="header__cart__price">Tổng: <span>@ViewBag.Total ₫</span></div> *@
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Danh mục sách</span>
                        </div>
                        <ul>
                            @await Component.InvokeAsync("CategoriesMenu")
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form asp-controller="Products" asp-action="Search">
                                <input type="text" name="keyword" placeholder="Nhập tên sách">
                                <button type="submit" class="site-btn">TÌM KIẾM</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>0809900900</h5>
                                <span>Hỗ trợ 24/7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="../TemplateCuss/img/breadcrumb1.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>BCARAT SHOP</h2>
                        <div class="breadcrumb__option">
                            <a href="~/">Trang chủ</a>
                            <span>Cửa hàng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Danh mục sách</h4>
                            <ul>
                                @await Component.InvokeAsync("CategoriesMenu")
                            </ul>
                        </div>
                        @* <div class="sidebar__item">
                            <h4>Price</h4>
                            <div class="price-range-wrap">
                                <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                     data-min="10" data-max="540">
                                    <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                    <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                </div>
                                <div class="range-slider">
                                    <div class="price-input">
                                        <input type="text" id="minamount">
                                        <input type="text" id="maxamount">
                                    </div>
                                </div>
                            </div>
                        </div> *@
                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                   @*  <div class="filter__item">
                        <div class="row">
                           <div class="col-lg-4 col-md-5">
                                <div class="filter__sort">
                                    <span>Sắp xếp</span>
                                    <select id="sortSelect">
                                        <option value="1">Nổi bật</option>
                                        <option value="2">Mới nhất</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="filter__found">
                                    <h6><span>16</span> Products found</h6>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="filter__option">
                                    <span class="icon_grid-2x2"></span>
                                    <span class="icon_ul"></span>
                                </div>
                            </div>
                        </div>
                    </div> *@
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg=@Url.Content("../BookImage/" + item.Image)>
                                        <ul class="product__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" asp-route-qty="1"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a asp-controller="Products" asp-action="ProductDetails" asp-route-idSP="@item.Id">@item.Name</a></h6>
                                        <h5>@String.Format("{0:0,0}", item.Price)đ</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="product__pagination">
                        @Html.PagedListPager(Model, page => Url.Action("Shop", new { page = page }))
                    </div>                    
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->
    <!-- Footer Section Begin -->
    @await Html.PartialAsync("_FrontEndFooter")
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="~/TemplateCuss/js/jquery-3.3.1.min.js"></script>
    <script src="~/TemplateCuss/js/bootstrap.min.js"></script>
    <script src="~/TemplateCuss/js/jquery.nice-select.min.js"></script>
    <script src="~/TemplateCuss/js/jquery-ui.min.js"></script>
    <script src="~/TemplateCuss/js/jquery.slicknav.js"></script>
    <script src="~/TemplateCuss/js/mixitup.min.js"></script>
    <script src="~/TemplateCuss/js/owl.carousel.min.js"></script>
    <script src="~/TemplateCuss/js/main.js"></script>

</body>
</html>
