@using X.PagedList.Mvc.Core;
@using Microsoft.AspNetCore.Mvc
@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
    <!DOCTYPE html>
    <html lang="zxx">

    <head>
        <meta charset="UTF-8">
        <meta name="description" content="Ogani Template">
        <meta name="keywords" content="Ogani, unica, creative, html">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>BookStore-Carat</title>

        <!-- Google Font -->
        <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

        <!-- Css Styles -->
        <link rel="stylesheet" href="./TemplateCuss/css/bootstrap.min.css" type="text/css" />
        <link rel="stylesheet" href="./TemplateCuss/css/font-awesome.min.css" type="text/css">
        <link rel="stylesheet" href="./TemplateCuss/css/elegant-icons.css" type="text/css">
        <link rel="stylesheet" href="./TemplateCuss/css/nice-select.css" type="text/css">
        <link rel="stylesheet" href="./TemplateCuss/css/jquery-ui.min.css" type="text/css">
        <link rel="stylesheet" href="./TemplateCuss/css/owl.carousel.min.css" type="text/css">
        <link rel="stylesheet" href="./TemplateCuss/css/slicknav.min.css" type="text/css">
        <link rel="stylesheet" href="./TemplateCuss/css/style.css" type="text/css">
    </head>

    <body>
        <!-- Page Preloder -->
        <div id="preloder">
            <div class="loader"></div>
        </div>

        <!-- Humberger Begin -->
        <div class="humberger__menu__overlay"></div>
        <div class="humberger__menu__wrapper">
            <div class="humberger__menu__logo">
                <a href="~/"><img src="./TemplateCuss/img/Logo.png" alt=""></a>
            </div>
            <div class="humberger__menu__cart">
                <ul>
                <li><a href="#"><i class="fa fa-heart"></i> </a></li>
                <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-bag"></i> </a></li>
                </ul>
            @* <div class="header__cart__price">Tổng: <span>@ViewBag.Total</span></div> *@
            </div>

            @await Html.PartialAsync("_HeaderMobile")
            <nav class="humberger__menu__nav mobile-menu">
                <ul>
                    <li class="active"><a href="~/">Tranh chủ</a></li>
                    <li><a href="~/Home/Shop">Cửa hàng</a></li>                    
                    <li><a href="~/Home/About">Giới thiệu</a></li>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                </ul>
            </nav>
            <div id="mobile-menu-wrap"></div>
            <div class="header__top__right__social">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-pinterest-p"></i></a>
            </div>
            <div class="humberger__menu__contact">
                <ul>
                    <li><i class="fa fa-envelope"></i> carat@colorlib.com</li>
                </ul>
            </div>
        </div>
        <!-- Humberger End -->
        <!-- Header Section Begin -->
        <header class="header">
            @await Html.PartialAsync("_Header")
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="header__logo">
                            <a href="~/"><img src="./TemplateCuss/img/Logo.png" alt=""></a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <nav class="header__menu">
                            <ul>
                                <li class="active"><a href="~/">Trang chủ</a></li>
                                <li><a href="~/Home/Shop">Cửa hàng</a></li>                               
                                <li><a href="~/Home/About">Giới thiệu</a></li>
                                <li><a href="~/Home/Contact">Liên hệ</a></li>
                            </ul>
                        </nav>
                    </div>
                    <div class="col-lg-3">
                        <div class="header__cart">
                            <ul>
                                <li><a href="#"><i class="fa fa-heart"></i> </a></li>
                                <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-bag"></i> </a></li>
                            </ul>
                            <div class="header__cart__price"><span></span></div>
                        </div>
                    </div>
                </div>
                <div class="humberger__open">
                    <i class="fa fa-bars"></i>
                </div>
            </div>
        </header>
        <!-- Header Section End -->
        <!-- Hero Section Begin -->
        <section class="hero">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="hero__categories">
                            <div class="hero__categories__all">
                                <i class="fa fa-bars"></i>
                                <span>Danh mục sách</span>
                            </div>
                            <ul>
                                @await Component.InvokeAsync("CategoriesMenu")
                            </ul>
                        </div>
                    </div>
                   
                    <div class="col-lg-9">
                        <div class="hero__search">
                            <div class="hero__search__form">
                                <form asp-controller="Products" asp-action="Search">
                                    <input type="text" name="keyword" placeholder="Nhập tên sách">
                                    <button type="submit" class="site-btn">TÌM KIẾM</button>
                                </form>
                            </div>
                            <div class="hero__search__phone">
                                <div class="hero__search__phone__icon">
                                    <i class="fa fa-phone"></i>
                                </div>
                                <div class="hero__search__phone__text">
                                    <h5>0809900900</h5>
                                    <span>Hỗ trợ 24/7</span>
                                </div>
                            </div>
                        </div>
                        <div class="hero__item set-bg" data-setbg="../TemplateCuss/img/hero/banner.PNG">
                            <div class="hero__text">
                                <span>CARATSHOP</span>
                                <h2>World <br />Book Day</h2>
                                <p>Luôn cập nhật các loại sách mới</p>
                                <a asp-controller="Home" asp-action="Shop" class="primary-btn">MUA NGAY</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Hero Section End -->
        <!-- Categories Section Begin -->
        <section class="categories">
            <div class="container">
                <div class="row">
                    <div class="categories__slider owl-carousel">
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="../TemplateCuss/img/categories/giongto.PNG">
                                <h5><a href="#">Văn học</a></h5>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="../TemplateCuss/img/categories/daiduongden.PNG">
                                <h5><a href="#">Tâm lý</a></h5>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="../TemplateCuss/img/categories/metranan.PNG">
                                <h5><a href="#">Trinh thám</a></h5>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="../TemplateCuss/img/categories/banthietkevidai.PNG">
                                <h5><a href="#">Khoa học</a></h5>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="categories__item set-bg" data-setbg="../TemplateCuss/img/categories/ngoanhlaihoatrotan.PNG">
                                <h5><a href="#">Ngôn tình</a></h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Categories Section End -->
        <!-- Featured Section Begin -->
        @* @RenderSection("breadcrum", required: false)*@
        <section class="featured spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>SẢN PHẨM NỔI BẬT</h2>
                        </div>
                        @* <div class="featured__controls">
                            <ul>
                                <li class="active" data-filter="*">Tất cả</li>
                                <li data-filter=".vanhocnghethuat">Văn học - Nghệ thuật</li>
                                <li data-filter=".tamlykynang">Tâm lý - Kỹ năng</li>
                                <li data-filter=".hinhsutrinhtham">Hình sự - Trinh thám</li>
                                <li data-filter=".khoahoccongnghe">Khoa học - Công nghệ</li>
                                <li data-filter=".langmanngontinh">Lãng mạn - Ngôn tình</li>
                            </ul>
                        </div> *@
                    </div>
                </div>
                <div class="row featured__filter">
                    @if (ViewData["FeaturedProducts"] != null)
                    {
                        var featuredProducts = ViewData["FeaturedProducts"] as List<Product>;
                        @foreach (var item in featuredProducts)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                                <div class="featured__item">
                                    <div class="featured__item__pic set-bg" data-setbg=@Url.Content("../BookImage/" + item.Image)>
                                        <ul class="featured__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" asp-route-qty="1"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="featured__item__text">
                                        <h6><a asp-controller="Products" asp-action="ProductDetails" asp-route-idSP="@item.Id">@item.Name</a></h6>
                                    <h5>@String.Format("{0:0,0}", item.Price)đ</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                @*<div class="product__pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page })) //phan trang
                </div>*@
            </div>
        </section>
        <!-- Featured Section End -->
        <!-- Banner Begin -->
        <div class="banner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="banner__pic">
                            <img src="../TemplateCuss/img/banner/banner1.PNG" alt="">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="banner__pic">
                            <img src="../TemplateCuss/img/banner/banner2.PNG" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Banner End -->
        <!-- Latest Product Section Begin -->
        <section class="featured spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>GỢI Ý HÔM NAY</h2>
                        </div>                        
                    </div>
                </div>
                <div class="row featured__filter">
                    @if (ViewData["LatestProducts"] != null)
                    {
                        var latestProducts = ViewData["LatestProducts"] as List<Product>;
                        @foreach (var item in latestProducts)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                                <div class="featured__item">
                                    <div class="featured__item__pic set-bg" data-setbg=@Url.Content("../BookImage/" + item.Image)>
                                        <ul class="featured__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" asp-route-qty="1"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="featured__item__text">
                                    <h6><a asp-controller="Products" asp-action="ProductDetails" asp-route-idSP="@item.Id">@item.Name</a></h6>
                                    <h5>@String.Format("{0:0,0}", item.Price)đ</h5>
                                    </div>
                                </div>
                            </div>
                        }
                    }                        
                </div>               
            </div>
        </section>
        <!-- Latest Product Section End -->
        <!-- Footer start -->
        @await Html.PartialAsync("_FrontEndFooter")
        <!-- Footer end -->
        <!-- Js Plugins -->
        <script src="../TemplateCuss/js/jquery-3.3.1.min.js"></script>
        <script src="../TemplateCuss/js/bootstrap.min.js"></script>
        <script src="../TemplateCuss/js/jquery.nice-select.min.js"></script>
        <script src="../TemplateCuss/js/jquery-ui.min.js"></script>
        <script src="../TemplateCuss/js/jquery.slicknav.js"></script>
        <script src="../TemplateCuss/js/mixitup.min.js"></script>
        <script src="../TemplateCuss/js/owl.carousel.min.js"></script>
        <script src="../TemplateCuss/js/main.js"></script>



    </body>

    </html>






