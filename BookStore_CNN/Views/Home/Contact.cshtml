@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Contact</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;600;900&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="../TemplateCuss/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="../TemplateCuss/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="../TemplateCuss/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="../TemplateCuss/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="../TemplateCuss/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="../TemplateCuss/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="../TemplateCuss/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="../TemplateCuss/css/style.css" type="text/css">
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__Logo">
            <a href="~/"><img src="../TemplateCuss/img/Logo.png" alt=""></a>
        </div>
        <div class="humberger__menu__cart">
            <ul>
                <li><a href="#"><i class="fa fa-heart"></i> <span></span></a></li>
                <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-bag"> </i></a></li>
            </ul>
            @* <div class="header__cart__price">Tổng: <span>@ViewBag.Total ₫</span></div> *@
        </div>
        @await Html.PartialAsync("_HeaderMobile")
        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                <li><a href="~/">Tranh chủ</a></li>
                <li><a href="~/Home/Shop">Cửa hàng</a></li>
                <li><a href="~/Home/About">Giới thiệu</a></li>
                <li class="active"><a href="~/Home/Contact">Liên hệ</a></li>
            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="header__top__right__social">
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-pinterest-p"></i></a>
        </div>
        <div class="humberger__menu__contact">
            <ul>
                <li><i class="fa fa-envelope"></i> carat@colorlib.com</li>
            </ul>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
       @await Html.PartialAsync("_Header")
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__Logo">
                        <a href="~/"><img src="../TemplateCuss/img/Logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            <li><a href="~/">Trang chủ</a></li>
                            <li><a href="~/Home/Shop">Cửa hàng</a></li>
                            <li><a href="~/Home/About">Giới thiệu</a></li>
                            <li class="active"><a href="~/Home/Contact">Liên hệ</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-bag"></i> </a></li>
                        </ul>
                        @* <div class="header__cart__price">Tổng: <span> @ViewBag.Total₫ </span></div> *@
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all">
                            <i class="fa fa-bars"></i>
                            <span>Danh mục sách</span>
                        </div>
                        <ul>
                            @await Component.InvokeAsync("CategoriesMenu")
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form asp-controller="Products" asp-action="Search">                                
                                <input type="text" name="keyword" placeholder="Nhập tên sách">
                                <button type="submit" class="site-btn">TÌM KIẾM</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>0809900900</h5>
                                <span>Hỗ trợ 24/7</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="../TemplateCuss/img/breadcrumb1.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>LIÊN HỆ CHÚNG TÔI</h2>
                        <div class="breadcrumb__option">
                            <a href="~/">Trang chủ</a>
                            <span>Liên hệ chúng tôi</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Contact Section Begin -->
    <section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_phone"></span>
                        <h4>Điện thoại</h4>
                        <p>0809900900</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_pin_alt"></span>
                        <h4>Địa chỉ</h4>
                        <p>280 An Dương Vương</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_clock_alt"></span>
                        <h4>Giờ mở cửa</h4>
                        <p>10:00 đến 23:00 </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                    <div class="contact__widget">
                        <span class="icon_mail_alt"></span>
                        <h4>Email</h4>
                        <p>carat@colorlib.com</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->      
    <!-- Contact Form Begin -->
    <div class="contact-form spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="contact__form__title">
                        <h2>ĐỂ LẠI LỜI NHẮN</h2>
                    </div>                    
                </div>
            </div>
            <form asp-controller="Home" asp-action="Contact" method="post">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <input type="text" name="name" placeholder="Nhập tên của bạn">
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <input type="text" name="email" placeholder="Nhập email">
                    </div>
                    <div class="col-lg-12 text-center">
                        <textarea name="content" placeholder="Nội dung"></textarea>
                        @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }

                        @if (!string.IsNullOrEmpty(TempData["Message"] as string))
                        {
                            <div class="alert alert-success">@TempData["Message"]</div>
                        }
                        <button type="submit" class="site-btn">Gửi lời nhắn</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Contact Form End -->
    <!-- Footer Section Begin -->
    @await Html.PartialAsync("_FrontEndFooter")
    <!-- Footer Section End -->
    <!-- Js Plugins -->
    <script src="../TemplateCuss/js/jquery-3.3.1.min.js"></script>
    <script src="../TemplateCuss/js/bootstrap.min.js"></script>
    <script src="../TemplateCuss/js/jquery.nice-select.min.js"></script>
    <script src="../TemplateCuss/js/jquery-ui.min.js"></script>
    <script src="../TemplateCuss/js/jquery.slicknav.js"></script>
    <script src="../TemplateCuss/js/mixitup.min.js"></script>
    <script src="../TemplateCuss/js/owl.carousel.min.js"></script>
    <script src="../TemplateCuss/js/main.js"></script>



</body>

</html>